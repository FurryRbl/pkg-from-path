{
	"name": "pkg-from-path",
	"type": "module",
	"license": "MIT",
	"version": "1.0.0",
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"repository": "github:FurryRbl/pkg-from-path",
	"homepage": "https://github.com/FurryRbl/pkg-from-path",
	"description": "Automatically detects which package a given path belongs to.",
	"bugs": {
		"email": "SharpIce@SharpIce.top",
		"url": "https://github.com/FurryRbl/pkg-from-path/issues"
	},
	"author": {
		"name": "SharpIce",
		"email": "SharpIce@SharpIce.top",
		"url": "https://SharpIce.top"
	},
	"funding": [
		{
			"type": "ko-fi",
			"url": "https://ko-fi.com/SharpIce"
		},
		{
			"type": "ifdian",
			"url": "https://ifdian.net/@SharpIce"
		}
	],
	"devEngines": {
		"runtime": {
			"name": "node",
			"onFail": "error"
		},
		"packageManager": {
			"name": "pnpm",
			"onFail": "error"
		}
	},
	"keywords": [
		"node",
		"package"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.cjs"
		}
	},
	"files": [
		"dist",
		"LICENSE",
		"README.md"
	],
	"scripts": {
		"clean": "rimraf dist",
		"lint": "eslint --fix .",
		"test": "node ./test.js",
		"build": "node ./build.js",
		"format": "prettier . --write"
	},
	"devDependencies": {
		"@eslint/js": "^9.15.0",
		"@swc/core": "^1.9.2",
		"chalk": "^5.3.0",
		"eslint": "^9.15.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-n": "^17.13.2",
		"eslint-plugin-prettier": "^5.2.1",
		"prettier": "^3.3.3",
		"rimraf": "^6.0.1"
	}
}
